.article-product
  padding 40px 50px
  width 355px
  background-color #ffffff
  &.active
    border 1px solid rgba(212, 78, 61, 0.5)
    transform scale(1.05) translateZ(0)

  &__title
    color #4a4a4a
    font-family Circe
    font-size 19px
    font-weight 700
    line-height 22px
  &__image
    margin-top 24px
    height 120px
    object-fit contain
  &__discription
    color #4a4a4a
    font-size 16px
    font-weight 400
    line-height 20px
    margin-top 20px
  .button--border-red
    color #d44e3d
    margin-top 30px
    width 100%
    border 1px solid #d44e3d
