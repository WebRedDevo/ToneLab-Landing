.initial-screen
  position relative

  &__tonirovka
    width 100%

    position absolute
    bottom 0
    &_bg
      height 415px
      background-color #3b3b3b
      opacity 0.68
    &_line
      position absolute
      top 0
      width 100%
      height 1px
      background #fff
      z-index 1
      cursor pointer
      display flex
      justify-content center
      align-items center
    &_button
      width 10px
      height 10px
      background #fff
      border-radius 50%
    &-text
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      display flex
      justify-content center
      align-items center
      margin auto
      span
        color #ffffff
        font-size 26px
        font-weight 300
        line-height 23px
        letter-spacing 0.52px
        margin-left 380px
        margin-bottom 380px
        position relative
        &:before
          content ''
          width 70%
          height 1px
          position absolute
          bottom -10px
          left -20px
          background #ffffff
        &:after
          content ''
          width 70%
          height 1px
          position absolute
          transform rotate(-35deg)
          left -128px
          bottom -44px
          background #ffffff
  &__slide
    position relative
    &_info
      padding-top 330px
      padding-bottom 60px
    &_image
      position absolute
      z-index: -1
    &_sale
      color #d46f62
      font-family Circe
      font-size 21px
      font-weight 700
    &_title
      color #ffffff
      font-family "Montserrat"
      font-size 46px
      font-weight 800
      line-height 54px
      margin-top 5px
    &_discription
      color #ffffff
      font-family Montserrat
      font-size 15px
      font-weight 300
      line-height 22px
      margin-top 18px
      max-width 400px
    &_buttons
      margin-top 35px
      .button
        &:not(:last-child)
          margin-right 28px

  &__slider
    &_control
      position relative
      z-index 9
    &_buttons
      position absolute
      right 100px
      bottom 190px
    &_button
      width 98px
      height 70px
      transform skewY(-4deg)
      box-shadow 0 6px 20px 1px rgba(87, 87, 87, 0.25)
      background-color #218555
      border-radius 2px
      &.button--next
        transform skewY(-4deg) translateY(-7px) translateX(18px)
      &.button--prev
        .icon
          transform rotate(-180deg)
      .icon
        fill #ffffff
        width 37px
        height 30px

    &-switches
      position relative
      bottom 0
      z-index 9
      padding-bottom 50px
      &_button
        opacity 0.6
        color #edf2f5
        font-size 33px
        font-weight 400
        line-height 54px
        letter-spacing 9.9px
        width 230px
        position relative
        background 0
        &:after
          content ''
          height 3px
          position absolute
          bottom 0
          left 0
          right 0
          background-color #edf2f5
          transition .33s
          z-index -1
        span
          position relative

        &.active
          color #c06d6d
          opacity 1
          &:after
            background-color #c06d6d

        &:hover
          opacity 1
          color #ffffff
          &.active
            color #c06d6d
            &:after
              height 3px
          &:after
            background-color #218555
            height 100%
